<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Create New Application</h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/applications" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="application[name]" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="application[description]" placeholder="Description" required>
                    </div>
                    <button class="btn btn-large btn-primary">Create</button>
                    <a class="btn btn-large btn-default inline pull-right" href="/applications">Back</a>
                </form>
            </div>
        </div>
    </div>
<% include ../partials/footer %>