<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit <%=application.name%></h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/applications/<%=application._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="application[name]" value="<%=application.name%>" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="application[description]" value="<%=application.description%>" required>
                    </div>
                    <button class="btn btn-large btn-warning">Edit</button>
                    <a class="btn btn-large btn-default inline pull-right" href="/applications">Back</a>
                </form>
            </div>
        </div>
    </div>
<% include ../partials/footer %>